package test_galib;

import java.util.Scanner;

public class hgfr {

	public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
	        System.out.print("Enter a number: ");
	        int n = sc.nextInt();
	        int a = 0, b = 1, c, sum = 0;
	        System.out.print("Fibonacci Series: " + a + " " + b);
	        for (int i = 2; i < n; i++) {
	            c = a + b;
	            System.out.print(" " + c);
	            sum += c;
	            a = b;
	            b = c;
	            //System.out.println("\nSum of Fibonacci Series up to " + n + ": " + (a + b + sum));
	        }
	        System.out.println("\nSum of Fibonacci Series up to " + n + ": " + (a + b + sum));

	}

}
